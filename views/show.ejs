<%- include('partials/header'); -%>
    <div class="container" style="margin-top:100px">
        <div class="row">
            <div class="col-md-3">
                <p class="lead"><strong>YelpCamp</strong></p>
                <div class="list-group">
                    <li class="list-group-item active">Info1</li>
                    <li class="list-group-item">Info2</li>
                    <li class="list-group-item">Info3</li>
                </div>
            </div>
            <div class="col-md-9">
                <div class="card">
                    <img src="<%=campground.image%>" alt="" class="card-img">
                    <div class="card-body">
                        <h4 class="card-title">
                            <a href="/"><%=campground.name%></a>
                        </h4>
                        <p class="card-text">
                            <%=campground.description%>
                        </p>
                        <p>
                            <em>Submitted by <%=campground.author.username%></em>
                        </p>
                        <% if(currentUser && campground.author.id.equals(currentUser._id)){ %>
                            <a class="btn btn-small btn-dark text-center" href="/campgrounds/<%=campground._id%>/edit">Edit</a>
                        <form id="form-id"action="/campgrounds/<%=campground._id%>?_method=DELETE" method="POST">
                            <button class="btn btn-danger btn-small">Delete</button>
                        </form>
                        <% } %>
                    </div>
                </div>
                <div class="card-body">
                    <div class="text-right">
                        <a href="/campgrounds/<%=campground._id%>/comments/new" class="btn btn-success">Add new comment</a>
                    </div>
                    <%campground.comments.forEach(function(comment){%>
                        <div class="row">
                            <div class="col-md-12">
                                <strong><%=comment.author.username%></strong>
                                <p>
                                    <%=comment.text%>
                                </p>
                                <% if(currentUser && comment.author.id.equals(currentUser._id)){ %>
                                    <a class="btn btn-sm btn-warning"href="/campgrounds/<%=campground._id%>/comments/<%=comment._id%>/edit">Edit</a>
                                    <form id="form-id"action="/campgrounds/<%=campground._id%>/comments/<%=comment._id%>?_method=DELETE" method="POST">
                                        <button class="btn btn-sm btn-danger btn-small">Delete</button>
                                    </form>
                                <% } %>
                            </div>
                        </div>
                    <%});%>
                </div>
            </div>
        </div>
    </div>
    <div class="container" style="margin-top:100px">
        <div class="card mt-5">

            
        </div>
    </div>

<%- include('partials/footer'); -%>
